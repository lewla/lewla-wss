{
  "type": "module",
  "scripts": {
    "start": "npm run start:prod",
    "start:prod": "cross-env NODE_ENV=production node --env-file=.env dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node --env-file=.env dist/index.js",
    "build": "tsc --build",
    "lint": "eslint \"src/**/*.ts\"",
    "migration:generate": "typeorm migration:generate ./src/db/migrations/InitSchema -d ./src/db/index.ts",
    "migration:run": "typeorm migration:run -d ./dist/db/index.js"
  },
  "dependencies": {
    "argon2": "^0.40.1",
    "jsonwebtoken": "^9.0.2",
    "mediasoup": "^3.18.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.28",
    "@types/pg": "^8.11.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "plop": "^4.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
